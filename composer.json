{
    "name": "pereorga/phpstan-rules",
    "description": "Custom PHPStan rules enforcing an opinionated code style.",
    "type": "phpstan-extension",
    "license": "MIT",
    "keywords": [
        "phpstan",
        "phpstan-rules"
    ],
    "require": {
        "php": "^8.1",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "pereorga\\PHPStanRules\\": "src/"
        }
    },
    "extra": {
        "phpstan": {
            "includes": [
                "rules.neon"
            ]
        }
    }
}
