{
    "name": "pereorga/phpstan-rules",
    "description": "Custom PHPStan rules enforcing an opinionated code style.",
    "type": "phpstan-extension",
    "license": "MIT",
    "keywords": [
        "phpstan",
        "phpstan-rules"
    ],
    "require": {
        "php": "^8.1",
        "phpstan/phpstan": "^2.0"
    },
    "require-dev": {
        "php-cs-fixer/shim": "^3.92",
        "phpstan/phpstan-strict-rules": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "PereOrga\\PHPStanRules\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PereOrga\\PHPStanRules\\Tests\\": "tests/"
        }
    },
    "extra": {
        "phpstan": {
            "includes": [
                "rules.neon"
            ]
        }
    },
    "scripts": {
        "php-cs-fixer": "vendor/bin/php-cs-fixer.phar fix --diff --no-interaction --ansi --show-progress=none",
        "php-cs-fixer-lint": "vendor/bin/php-cs-fixer.phar fix --dry-run --verbose --stop-on-violation --no-interaction --ansi --show-progress=none",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit=256M --no-progress",
        "test": "./phpunit.phar --testdox"
    }
}
